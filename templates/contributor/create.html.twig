{% extends 'base.html.twig' %}
{% block title %}Ajout d'un contributeur{%  endblock %}
{% block body %}
    <div class="corps">
        <ol class="breadcrumb">
            <li class="active"> Créer un compte </li>
        </ol>
        <blockquote>Création d'un compte sur le Service Central d'Authentification du CCSD. Le compte est valable sur HAL, Sciencesconf et Episciences</blockquote>
        <hr />
        <div id="flash-messages">
        </div>
        <span class="col-md-9 col-md-offset-3 ccsd_form_required">Champs requis</span>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.pwd) }}
        {{ form_row(form.isAdmin) }}
        {{ form_row(form.civility) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.complementName) }}
        {{ form_row(form.photo) }}
        <a class="btn-primary" href="#">Créer un compte</a>
        {{ form_end(form) }}
    </div>
{% endblock %}