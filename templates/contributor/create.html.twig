{% extends 'base.html.twig' %}
{% block title %}Ajout d'un contributeur{%  endblock %}
{% block body %}
    <div class="corps">
        <ol class="breadcrumb">
            <li class="active"> *** </li>
        </ol>
        <blockquote>Création d'un compte sur le Service Central d'Authentification du CCSD. Le compte est valable sur HAL, Sciencesconf et Episciences</blockquote>
        <hr />
        <div id="flash-messages">
            <div class="gb-info">Créer un compte</div>
        </div>
        <span class="col-md-9 col-md-offset-3 ccsd_form_required">Champs requis</span>
              {{ form_start(form) }}
              {{ form_widget(form) }}
                <div class="form-group">{{ form_row(form.civility) }}                 </div>
                <div class="form-group">    {{ form_row(form.lastname) }}             </div>
                <div class="form-group">           {{ form_row(form.firstname) }}     </div>
                <div class="form-group">          {{ form_row(form.email) }}          </div>
                <div class="form-group">       {{ form_row(form.complementName) }}    </div>
                <div class="form-group">     {{ form_row(form.photo) }}               </div>
                <div class="form-group">         {{ form_row(form.login) }}           </div>
                <div class="form-group">           {{ form_row(form.pwd) }}           </div>
                <div class="form-group">     {{ form_row(form.isAdmin) }}             </div>
        <div class="form-group">
            <a class="btn btn-primary" href="#{{ path('contributor_create_confirmation') }}">Créer un compte</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
